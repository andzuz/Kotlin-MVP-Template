<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.andrzejz.kotlinproject" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.SampleContainerActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".activities.SampleListActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.SampleDrawerActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".activities.SampleActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>
